@using GMAH.Models.Consts
@using GMAH.Services.Utilities
@using System.ComponentModel.DataAnnotations
<div class="modal fade" id="scoreTypeModal">
    <div class="modal-dialog modal-lg">
        <div id="loading" class="text-center" style="display: none">
            <i class="fas fa-3x fa-circle-notch fa-spin"></i>
            <p>Đang lưu dữ liệu, vui lòng đợi</p>
        </div>

        <div class="modal-content" id="inputform">
            <div class="modal-header">
                <h4 class="modal-title">Thông tin thành phần điểm</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="SubjectName">Tên thành phần điểm @Html.Partial("_RequiredLabel")</label>
                    <input type="text" class="form-control" name="ScoreName" id="ScoreName" required>
                </div>

                <div class="form-group">
                    <label for="SubjectCode">Hệ số @Html.Partial("_RequiredLabel")</label>

                    <select class="form-control" name="ScoreWeight" id="ScoreWeight">
                        @foreach (ScoreWeightEnum scoreWeight in Enum.GetValues(typeof(ScoreWeightEnum)))
                        {
                            <option value="@((int)scoreWeight)">@(scoreWeight.GetAttribute<DisplayAttribute>().Name)</option>
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Huỷ bỏ</button>
                <button type="button" class="btn btn-primary" onclick="SaveScoreType()">Lưu lại</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>