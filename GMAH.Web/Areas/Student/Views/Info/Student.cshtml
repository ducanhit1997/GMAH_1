
@{
    ViewBag.Title = "Thông tin học sinh";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="jumbotron">
        <p>Chọn học sinh muốn xem hoặc đổi thông tin tại đây:</p>
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <label for="selectedClass" class="col-sm-3 col-form-label">Học sinh</label>
                    <div class="col-sm">
                        <div class="input-group input-group-sm">
                            <select class="form-control select2bs4" id="selectedStudent" onchange="LoadStudentInfo()">
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="loading" class="text-center" style="display: none">
        <i class="fas fa-3x fa-circle-notch fa-spin"></i>
        <p>Đang tải dữ liệu, vui lòng đợi</p>
    </div>
    <div id="mainGroup" style="display: none">
        <h5>Thông tin học sinh</h5>
        <hr />
        <div class="form-group">
            <label for="studentFullname">Họ tên học sinh</label>
            <input type="text" class="form-control" id="studentFullname" readonly>
            <small class="form-text text-muted">Vui lòng thông tin cho GVCN nếu họ tên học sinh sai</small>
        </div>

        <div class="form-group">
            <label for="studentCitizenID">CMND/CCCD</label>
            <input type="text" class="form-control" id="studentCitizenID" readonly>
            <small class="form-text text-muted">Vui lòng thông tin cho GVCN nếu CMND/CCCD học sinh sai</small>
        </div>

        <div class="form-group">
            <label for="studentAddress">Địa chỉ</label>
            <input type="email" class="form-control" id="studentAddress">
        </div>

        <div class="form-group">
            <label for="studentEmail">Email</label>
            <input type="email" class="form-control" id="studentEmail">
        </div>

        <div class="form-group">
            <label for="studentPhone">Số điện thoại</label>
            <input type="email" class="form-control" id="studentPhone">
        </div>

        <div class="text-right">
            <button type="button" class="btn btn-primary" onclick="SaveStudentInfo()">Lưu dữ liệu học sinh</button>
        </div>
    </div>

</div>


@section scripts {
    <script src="~/Assests/Student/js/pages/StudentInfo.js"></script>
}
