
@{
    ViewBag.Title = "Xem điểm số";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="jumbotron">
        <p>Chọn học kỳ muốn xem điểm tại đây:</p>
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <label for="selectedSemester" class="col-sm-3 col-form-label">Học kỳ</label>
                    <div class="col-sm">
                        <div class="input-group input-group-sm">
                            <select class="form-control select2bs4" id="selectedSemester" onchange="LoadScoreData()">
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="loading" class="text-center" style="display: none">
        <i class="fas fa-3x fa-circle-notch fa-spin"></i>
        <p>Đang tải dữ liệu, vui lòng đợi</p>
    </div>
    <div id="mainGroup">
        <h5 id="className"></h5>

        <div class="row">
            <div class="col">
                <select class="form-control rounded-0" id="selectedViewType" onchange="LoadScoreData()">
                    <option value="1" selected>Chế độ xem điểm thành phần</option>
                    <option value="2">Chế độ xem điểm TB học kỳ</option>
                </select>
            </div>
        </div>
        <br />

        <div class="table-responsive">
            <table id="result" class="table table-bordered table-hover">
                <thead name="header" class="thead-light">
                    <tr>
                        <th>Mã học sinh</th>
                        <th>Họ tên học sinh</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody name="body">
                </tbody>
            </table>
        </div>
    </div>

</div>


@section scripts {
    <script src="~/Assests/Student/js/pages/ViewScore.js"></script>
    <script src="~/Assests/Student/js/pages/ScoreTableStudent.js"></script>
}

