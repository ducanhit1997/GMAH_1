
@{
    ViewBag.Title = "Xem điểm học sinh";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}

<div>

    <div class="jumbotron">
        <p>Chọn học sinh và học kỳ muốn xem điểm tại đây:</p>
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <label for="selectedClass" class="col-sm-3 col-form-label">Học sinh</label>
                    <div class="col-sm">
                        <div class="input-group input-group-sm">
                            <select class="form-control select2bs4" id="selectedStudent" onchange="LoadScoreData()">
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="row">
                    <label for="selectedSemester" class="col-sm-3 col-form-label">Học kỳ</label>
                    <div class="col-sm">
                        <div class="input-group input-group-sm">
                            <select class="form-control select2bs4" id="selectedSemester" onchange="LoadScoreData()">
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="loading" class="text-center" style="display: none">
        <i class="fas fa-3x fa-circle-notch fa-spin"></i>
        <p>Đang tải dữ liệu, vui lòng đợi</p>
    </div>
    <div id="mainGroup">
        <h5 id="className"></h5>
        <div class="row">
            <div class="col">
                <select class="form-control rounded-0" id="selectedViewType" onchange="LoadScoreData()">
                    <option value="1" selected>Chế độ xem điểm thành phần</option>
                    <option value="2">Chế độ xem điểm TB học kỳ</option>
                </select>
            </div>
        </div>
        <br />

        <div class="table-responsive">
            <table id="result" class="table table-bordered table-hover">
                <thead name="header" class="thead-light">
                    <tr>
                        <th>Mã học sinh</th>
                        <th>Họ tên học sinh</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody name="body">
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    table { white-space: nowrap; margin: 0; border: none; border-collapse: separate; border-spacing: 0; table-layout: fixed; border: 1px solid black; }
    table td,
    table th { border: 1px solid black; padding: 0.5rem 1rem; }
    table thead th { padding: 3px; position: sticky; top: 0; z-index: 1; width: 25vw; background: white; }
    table td { background: #fff; padding: 4px 5px; text-align: center; }
    table tbody th { font-weight: 100; font-style: italic; text-align: left; position: relative; }
    table thead th:first-child { position: sticky; left: 0; z-index: 2; }
    table thead tr:nth-child(2) th:first-child { position: sticky; left: 0; z-index: 2; }
    table thead tr:nth-child(2) th:nth-child(2) { position: sticky; left: 12.5vw; z-index: 2; }
    table tbody td:first-child { position: sticky; left: 0; background: white; z-index: 1; }
    table tbody td:nth-child(2) { position: sticky; left: 12.5vw; background: white; z-index: 1; }
    .caption { text-align: left; padding: 0.25rem; position: sticky; left: 0; }
</style>


@section scripts {
    <script src="~/Assests/Student/js/pages/ViewScore.js"></script>
    <script src="~/Assests/Student/js/pages/ScoreTable.js"></script>
}

